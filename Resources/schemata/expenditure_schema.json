{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "json_type": "income_schema",
  "json_version": "01.00.00",
  "type": "object",
  "properties": {
    "json_type": {
      "type": "string",
      "const": "expenditure",
      "description": "legt die Art der json-Datei fest: `expenditure`"
    },
    "json_version": {
      "type": "string",
      "pattern": "^[0-9]{2}.[0-9]{2}.[0-9]{2}",
      "description": "JSON-Version"
    },
    "id": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$",
      "description": "UUID zur eindeutigen Identifizierung"
    },
    "trade_partner": {
      "type": "string",
      "description": "Kunde"
    },
    "description": {
      "type": "string",
      "description": "Betreff"
    },
    "invoice_number": {
      "type": "string",
      "maxLength": 256,
      "description": "Rechnungsnummer"
    },
    "invoice_date": {
      "type": "string",
      "pattern": "^[0-9]{2}.[0-9]{2}.[0-9]{4}$",
      "description": "Rechnungsdatum"
    },
    "deliver_date": {
      "type": "string",
      "maxLength": 21,
      "description": "Lieferzeitraum"
    },
    "amount_gross": {
      "type": "number",
      "description": "Brutto Betrag"
    },
    "amount_net": {
      "type": "number",
      "description": "Netto Betrag"
    },
    "payment_date": {
      "type": "string",
      "pattern": "^(|[0-9]{2}.[0-9]{2}.[0-9]{4})$",
      "description": "Zahlungseingang"
    },
    "bar": {
      "type": "boolean",
      "description": "Barzahlung"
    },
    "group": {
      "type": "string",
      "description": "Gruppe"
    },
    "comment": {
      "type": "string",
      "description": "Kommentare"
    },
    "attachment": {
      "type": "string",
      "description": "Dateiname des Anhangs"
    }
  },
  "required": [
    "json_type",
    "json_version",
    "id",
    "trade_partner",
    "description",
    "invoice_number",
    "invoice_date",
    "deliver_date",
    "amount_gross",
    "amount_net",
    "payment_date",
    "bar",
    "group",
    "comment",
    "attachment"
  ],
  "additionalProperties": false,
  "maxProperties": 15
}
