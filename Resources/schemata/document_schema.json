{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "json_type": "document_schema",
  "json_version": "01.00.00",
  "type": "object",
  "properties": {
    "json_type": {
      "type": "string",
      "const": "document",
      "description": "legt die Art der json-Datei fest: `document`"
    },
    "json_version": {
      "type": "string",
      "pattern": "^[0-9]{2}.[0-9]{2}.[0-9]{2}",
      "description": "JSON-Version"
    },
    "id": {
      "type": "string",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$",
      "description": "UUID zur eindeutigen Identifizierung"
    },
    "description": {
      "type": "string",
      "description": "Beschreibung"
    },
    "document_date": {
      "type": "string",
      "pattern": "^[0-9]{2}.[0-9]{2}.[0-9]{4}$",
      "description": "Dokumentendatum"
    },
    "attachment": {
      "type": "string",
      "description": "Dateiname des Anhangs"
    }
  },
  "required": [
    "json_type",
    "json_version",
    "id",
    "document_date",
    "description",
    "attachment"
  ],
  "additionalProperties": false,
  "maxProperties": 13
}
